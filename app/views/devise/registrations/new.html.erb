<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs container">
    <div class="row form-row-margin">
      <%= f.input :username, :required => true, :autofocus => true, label_html: { class: "col-md-2" }, input_html: { class: "col-md-2" } %>
    </div>
    <div class="row form-row-margin">
        <%= f.input :email, :required => true, label_html: { class: "col-md-2" }, input_html: { class: "col-md-2" }  %>
      </div>
    <div class="row form-row-margin">
        <%= f.input :password, :required => true, label_html: { class: "col-md-2" }, input_html: { class: "col-md-2" }  %>
      </div>
    <div class="row form-row-margin">
        <%= f.input :password_confirmation, :required => true, label_html: { class: "col-md-2" }, input_html: { class: "col-md-2" }  %>
      </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

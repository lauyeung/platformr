<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs container">
    <div class="row form-row-margin">
      <%= f.input :password, :label => "New password", :required => true, :autofocus => true, label_html: { class: "col-md-2" }, input_html: { class: "col-md-2" } %>
    </div>
    <div class="row form-row-margin">
      <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, label_html: { class: "col-md-2" }, input_html: { class: "col-md-2" } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

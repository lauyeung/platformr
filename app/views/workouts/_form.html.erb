<%= simple_form_for @workout do |f| %>
  <% if @workout.errors[:workout].any? %>
    <% @workout.errors[:workout].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <%= f.input :workout_date %>


  <%= f.simple_fields_for :combinations do |builder| %>
    <%= render 'combination_fields', f: builder %>
  <%- end -%>

  <p><%= link_to_add_fields('Add a Combination', f, :combinations) %></p>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>

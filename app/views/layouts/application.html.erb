<!DOCTYPE html>
<html>
  <head>
    <title>Platformr</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application", cache: true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">PLATFORMR</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <%- if user_signed_in? -%>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Add New Workout', new_workout_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Exercises<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Manage Exercises', exercises_path %></li>
              <li><%= link_to 'Add New Exercise', new_exercise_path %></li>
            </ul>
          </li>
        </ul>
        <%- end -%>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Edit account", edit_user_registration_path(current_user)%></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to "Sign up", new_user_registration_path%></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
              <ul class="dropdown-menu" id="dropdown-login">
                <%= simple_form_for('user', url: user_session_path) do |f| %>
                  <li><%= f.input :login, :required => false, :autofocus => true %></li>
                  <li><%= f.input :password, :required => false %></li>
                  <li>
                    <div class="checkbox">
                      <label>
                        <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span>
                        <input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1"> Remember me
                      </label>
                    </div>
                  </li>
                  <li><%= f.button :submit, "Sign in" %></li>
                <%- end -%>
              </ul>
            </li>
          <%- end -%>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>


    <div id="wrap" class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="notice"><%= notice %></div>
          <div class="alert"><%= alert %></div>
          <%- if user_signed_in? -%>
            <ul class="nav nav-tabs">
              <li class="<%= 'active' if params[:controller] == 'workouts' %>"><%= link_to 'Workouts', workouts_path %></li>
              <li class="<%= 'active' if params[:controller] == 'exercises' %>"><%= link_to 'Exercises', exercises_path %></li>
            </ul>
          <%- end -%>
          <%= yield %>
        </div>
      </div>
      <div id="push"></div>
    </div>

    <div id="footer">
      <div class="container">
        <p><%= link_to 'About Us', about_us_path %></p>
      </div>
    </div>

  </body>
</html>

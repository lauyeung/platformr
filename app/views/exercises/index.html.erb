  <!-- Table -->
  <table class="table table-hover">

    <thead>
      <tr>
        <th>Exercise Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @exercises.each do |exercise| %>
        <tr class="exercise_<%= exercise.id %>">
          <td><%= exercise.name %></td>
          <td><%= link_to 'Show', exercise %></td>
          <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
          <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

<br>
<%= link_to 'Add New Exercise', new_exercise_path, class: 'btn btn-success' %>
